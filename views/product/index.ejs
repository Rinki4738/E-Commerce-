<% layout('layouts/boilerplate') %>
<%- include('../partials/nav') %>
<%- include('../partials/flash') %>

<div class="container my-5">
    <div class="row g-4 justify-content-center">
        <% for(let item of product) { %>
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm h-100">
                    <img src="<%= item.image %>" class="card-img-top" alt="Product Image" style="height: 220px; object-fit: cover;">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title"><%= item.name %></h5>
                            <h6 class="text-success mb-2">â‚¹<%= item.price %></h6>
                            <p class="card-text text-muted"><%= item.desc.length > 80 ? item.desc.slice(0, 80) + '...' : item.desc %></p>
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <a href="/products/<%= item.id %>" class="btn btn-outline-primary btn-sm">View</a>
                            <% if(currentUser && currentUser.role === 'Seller') { %>
                                <form action="/products/<%= item.id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>
